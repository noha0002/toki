---
import Layout from "../layouts/Layout.astro";
import ForsideCard from "../components/ForsideCard.astro";
import k from "../assets/k.webp";
---

<Layout>
  <h1>Index</h1>

  <img src={k.src} width={1400} height={560} alt="My image" />

  <section class="intro-container">
    <h1>A HOUSE BUILT ON STORIES, IDENTITIES, AND IMPACT.</h1>
    <p>
      We turn packaging into strategic lever - creating value for business,
      customers, and planet.
    </p>
    <button>Explore full t√≥ki flow</button>
  </section>

  <section class="kategori-container">
    <ForsideCard
      kategoriBeskrivelse="OUR SOLUTIONS, YOUR IDENTITY"
      kategoriTitle="OUR CASES"
      href="/"
    />
    <ForsideCard
      kategoriBeskrivelse="TOKI FLOW FIVE PHASES WHERE WE CREATE VALUE - TOGETHER"
      kategoriTitle="OUR STRATEGY"
      href="/liste-view"
    />
    <ForsideCard
      kategoriBeskrivelse="MEET THE TOKI FAMILY"
      kategoriTitle="OUR FAMILY"
      href="/"
    />
    <ForsideCard
      kategoriBeskrivelse="WANT TO SHAPE THE FUTURE OF PACKAGING WITH US?"
      kategoriTitle="OUR CONTACTS"
      href="/"
    />
  </section>
</Layout>

<style>
  img {
    display: block;
    margin-left: auto;
    margin-right: auto;
    border-radius: 12px 12px 0 0;
    margin-top: 120px;
  }
  .kategori-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
    justify-content: center;
    padding-bottom: 20px;
  }

  .intro-container {
    width: 400px;
    margin: 120px 0 200px 60%;
  }

  button {
    background-color: #ffffff;
    color: #594534;
    padding: 10px 20px;
    border-radius: 20px;
    cursor: pointer;
    margin-top: 20px;
  }

</style>
