---
const { kategoriBeskrivelse, kategoriTitle } = Astro.props;
import k from "../assets/k.webp";
---

<article>
  <p>{kategoriBeskrivelse}</p>
  <h3>{kategoriTitle}</h3>
  <img src={k.src} width={1400} height={560} alt="My image" class="hover-img" />
</article>

<style>
  article {
    background-color: #f5f5f5;
    width: 370px;
    height: 70vh;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    
  }
  p {
    text-align: left;
    width: 190px;
    margin-left: 20px;
    color: #594534;
  }

  h3 {
    text-align: left;
    margin: 0;
    padding-left: 9px;
    padding-bottom: 20px;
    font-size: 3vh;
    width: 5px;
    color: #594534;
    word-spacing: 0.8rem;
  }
 

  .hover-img {
    display: none; /* skjul som standard */
    position: absolute; /* placér ovenpå kortet */
    top: 0;
    left: 0;
    width: 100%;
    height: auto;
    z-index: 10;
  }

  .card:hover .hover-img {
    display: block; /* vis ved hover */
  }
</style>
