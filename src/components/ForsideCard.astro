---
const { kategoriBeskrivelse, kategoriTitle, href } = Astro.props;
---

<article>
  <a href={href}>
    <p>{kategoriBeskrivelse}</p>
    <h3>{kategoriTitle}</h3>
  </a>
</article>

<style>
  article {
    background-color: #f5f5f5;
    width: 370px;
    height: 70vh;
  }
  article a {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
  }
  p {
    text-align: left;
    width: 190px;
    margin-left: 20px;
    color: #594534;
  }

  h3 {
    text-align: left;
    margin: 0;
    padding-left: 9px;
    padding-bottom: 20px;
    font-size: 3vh;
    width: 5px;
    color: #594534;
    word-spacing: 0.8rem;
  }
</style>
